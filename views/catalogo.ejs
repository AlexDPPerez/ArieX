<!-- HERO minimal -->
<section
  class="container relative min-h-[30vh] rounded-lg overflow-hidden mb-12 pb-5"
>
  <!-- imagen de fondo (absolute) -->
  <img
    src="assets/img/header.jpg"
    alt="Header"
    class="absolute inset-0 w-full h-full object-cover rounded-2xl"
  />
  <!-- overlay oscuro -->
  <div
    class="absolute inset-0 w-full h-full bg-black/70 rounded-2xl backdrop-blur-sm"
  ></div>

  <!-- CONTENIDO CENTRADO: ocupa todo el hero y centra perfectamente -->
  <div
    class="absolute inset-0 z-10 flex items-center justify-center flex-col text-center px-4"
  >
    <h1 class="text-white text-7xl font-bold">Catalogo</h1>
    <h2 class="text-white text-xl mt-2">
      Explora nuestras colecciones y personaliza tu cuadro
    </h2>
  </div>
</section>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <!-- FILTROS MOBILE (acordeón nativo) -->
  <div class="lg:hidden">
    <details class="bg-zinc-900 rounded-lg p-3">
      <summary class="cursor-pointer select-none text-gray-100 font-semibold">
        Filtros
      </summary>

      <div class="mt-3 space-y-4">
        <!-- buscador -->
        <div>
          <label class="block text-sm text-gray-300 mb-2">Buscar</label>
          <input
            type="search"
            placeholder="Buscar por título o etiqueta"
            class="w-full rounded-md bg-zinc-800 border border-gray-700 px-3 py-2 text-gray-100"
          />
        </div>

        <!-- categorías (lista simple) -->
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Categorías</h4>
          <ul class="grid grid-cols-2 gap-2 text-sm">
            <li>
              <label class="inline-flex items-center gap-2"
                ><input
                  type="radio"
                  name="cat-mobile"
                  checked
                  class="form-radio"
                />
                <span class="text-gray-100">Todos</span></label
              >
            </li>
            <li>
              <label class="inline-flex items-center gap-2"
                ><input type="radio" name="cat-mobile" class="form-radio" />
                <span class="text-gray-100">Modernos</span></label
              >
            </li>
            <li>
              <label class="inline-flex items-center gap-2"
                ><input type="radio" name="cat-mobile" class="form-radio" />
                <span class="text-gray-100">Clásicos</span></label
              >
            </li>
            <li>
              <label class="inline-flex items-center gap-2"
                ><input type="radio" name="cat-mobile" class="form-radio" />
                <span class="text-gray-100">Abstractos</span></label
              >
            </li>
          </ul>
        </div>

        <!-- subcategorías como checkboxes -->
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Subcategorías</h4>
          <div class="flex flex-wrap gap-2">
            <label
              class="inline-flex items-center gap-2 px-2 py-1 bg-zinc-800 rounded-md text-sm"
              ><input type="checkbox" />
              <span class="text-gray-100">Marco</span></label
            >
            <label
              class="inline-flex items-center gap-2 px-2 py-1 bg-zinc-800 rounded-md text-sm"
              ><input type="checkbox" />
              <span class="text-gray-100">Sin marco</span></label
            >
            <label
              class="inline-flex items-center gap-2 px-2 py-1 bg-zinc-800 rounded-md text-sm"
              ><input type="checkbox" />
              <span class="text-gray-100">Pintura</span></label
            >
          </div>
        </div>

        <!-- precio -->
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Precio</h4>
          <div class="flex gap-2">
            <input
              type="number"
              placeholder="Min"
              class="w-1/2 rounded-md bg-zinc-800 border border-gray-700 px-2 py-1 text-gray-100"
            />
            <input
              type="number"
              placeholder="Max"
              class="w-1/2 rounded-md bg-zinc-800 border border-gray-700 px-2 py-1 text-gray-100"
            />
          </div>
        </div>

        <!-- tags -->
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Estilos</h4>
          <div class="flex flex-wrap gap-2">
            <label class="px-2 py-1 rounded-md bg-zinc-800 text-xs"
              ><input type="checkbox" /> Impresión</label
            >
            <label class="px-2 py-1 rounded-md bg-zinc-800 text-xs"
              ><input type="checkbox" /> Pintura</label
            >
            <label class="px-2 py-1 rounded-md bg-zinc-800 text-xs"
              ><input type="checkbox" /> Marco</label
            >
            <label class="px-2 py-1 rounded-md bg-zinc-800 text-xs"
              ><input type="checkbox" /> Abstracto</label
            >
          </div>
        </div>

        <!-- ordenar -->
        <div>
          <label class="text-sm text-gray-300">Ordenar por</label>
          <select
            class="w-full rounded-md bg-zinc-800 border border-gray-700 px-3 py-2 text-gray-100 mt-2"
          >
            <option>Relevancia</option>
            <option>Precio: menor</option>
            <option>Precio: mayor</option>
            <option>Más nuevos</option>
          </select>
        </div>

        <div class="flex gap-2">
          <button class="flex-1 px-3 py-2 bg-blue-600 text-white rounded-md">
            Aplicar
          </button>
          <button class="flex-1 px-3 py-2 bg-zinc-800 text-gray-100 rounded-md">
            Limpiar
          </button>
        </div>
      </div>
    </details>
  </div>

  <!-- SIDEBAR DESKTOP (visible en lg) -->
  <aside
    class="hidden lg:block lg:col-span-1 bg-zinc-900 rounded-lg p-4 shadow"
  >
    <div class="flex items-center justify-between mb-4">
      <h3 class="font-semibold text-lg">Filtros</h3>
      <button class="text-sm text-gray-400 hover:text-gray-200">Limpiar</button>
    </div>

    <label class="block text-sm text-gray-300 mb-2">Buscar</label>
    <input
      type="search"
      placeholder="Buscar por título o etiqueta"
      class="w-full rounded-md bg-zinc-800 border border-gray-700 px-3 py-2 text-gray-100 mb-4"
    />

    <h4 class="text-sm font-medium text-gray-300 mb-2">Categorías</h4>
    <ul class="space-y-2 text-sm mb-4">
      <li class="px-3 py-2 bg-zinc-800 rounded-md">
        <label class="inline-flex items-center gap-2"
          ><input type="radio" name="cat" checked />
          <span class="text-gray-100">Todos</span></label
        >
      </li>
      <li class="px-3 py-2 bg-zinc-800 rounded-md">
        <label class="inline-flex items-center gap-2"
          ><input type="radio" name="cat" />
          <span class="text-gray-100">Modernos</span></label
        >
        <ul class="mt-2 ml-4 space-y-1 text-xs">
          <li>
            <label class="inline-flex items-center gap-2"
              ><input type="checkbox" />
              <span class="text-gray-300">Marco</span></label
            >
          </li>
          <li>
            <label class="inline-flex items-center gap-2"
              ><input type="checkbox" />
              <span class="text-gray-300">Sin marco</span></label
            >
          </li>
          <li>
            <label class="inline-flex items-center gap-2"
              ><input type="checkbox" />
              <span class="text-gray-300">Pintura</span></label
            >
          </li>
        </ul>
      </li>
    </ul>

    <label class="text-sm text-gray-300">Ordenar por</label>
    <select
      class="w-full rounded-md bg-zinc-800 border border-gray-700 px-3 py-2 text-gray-100 mt-2"
    >
      <option>Relevancia</option>
      <option>Precio: menor</option>
      <option>Precio: mayor</option>
      <option>Más nuevos</option>
    </select>

    <div class="mt-4 flex gap-2">
      <button class="flex-1 px-3 py-2 bg-blue-600 text-white rounded-md">
        Aplicar
      </button>
      <button class="flex-1 px-3 py-2 bg-zinc-800 text-gray-100 rounded-md">
        Limpiar
      </button>
    </div>
  </aside>

  <!-- GRID de productos (3 columnas en lg) -->
  <section class="lg:col-span-3">
    <!-- control superior (solo maqueta) -->
    <div
      class="flex flex-col sm:flex-row items-center justify-between gap-3 mb-4"
    >
      <p class="text-sm text-gray-300">
        Mostrando
        <span class="font-semibold"> <%= cuadros.length %> </span> resultados
      </p>
    </div>

    <div id="cuadrosContainer" class="grid gap-6 md:grid-cols-3 grid-cols-2">
      <% if(cuadros.length === 0){ %>
      <p class="text-gray-300">No se encontraron cuadros.</p>
      <% }else {cuadros.forEach(p=> { %>
      <!-- Cambiado cuadros.array a cuadros -->
      <!-- tarjeta 1 -->
      <a href="/catalogo/<%= p.id %>">
        <!-- Tarjeta clickeable -->
        <article
          class="bg-zinc-900 rounded-lg overflow-hidden shadow hover:shadow-2xl hover:scale-105 hover:ring-2 hover:ring-zinc-500 transition-transform duration-300 cursor-pointer"
        >
          <figure class="relative w-full h-56">
            <img
              src="<%= p.imagen %>"
              alt="<%= p.titulo %>"
              class="w-full h-full object-cover group-hover:opacity-90 transition"
            />
          </figure>
          <div class="p-4">
            <h3 class="md:text-lg text-base font-medium text-gray-100">
              <%= p.titulo %>
            </h3>
            <p
              class="md:text-sm text-xs max-w-fit mt-2 rounded-lg px-2 py-1 font-medium"
              style="
                background-color: <%= p.categoria_color || '#3f3f46' %>;
                color: #ffffff;
              "
            >
              <%= p.categoria %>
            </p>
          </div>
        </article>
      </a>
      <% })} %>
    </div>

    <!-- paginación estática -->
    <div class="mt-8 flex items-center justify-center gap-2">
      <button
        class="px-3 py-1 rounded-md bg-zinc-800 border border-gray-700 text-gray-100"
      >
        Anterior
      </button>
      <div class="flex items-center gap-1">
        <button class="px-3 py-1 rounded-md bg-blue-600 text-white">1</button>
        <button
          class="px-3 py-1 rounded-md bg-zinc-800 text-gray-100 border border-gray-700"
        >
          2
        </button>
        <button
          class="px-3 py-1 rounded-md bg-zinc-800 text-gray-100 border border-gray-700"
        >
          3
        </button>
      </div>
      <button
        class="px-3 py-1 rounded-md bg-zinc-800 border border-gray-700 text-gray-100"
      >
        Siguiente
      </button>
    </div>
  </section>
</div>
