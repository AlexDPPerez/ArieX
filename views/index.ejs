<section aria-labelledby="catalogo-heading" id="catalogo" class="scroll-mt-20 mb-12">
    <h2 id="catalogo-heading" class="text-2xl font-semibold mb-4 text-center">Catálogo</h2>

    <!-- filtros (accesible) -->
    <nav aria-label="Filtrar por categoría " class="flex justify-center mb-6">
        <ul class="flex gap-2 flex-wrap">
            <li><button type="button" class="filter-btn px-3 py-1 rounded-md border shadow-sm text-sm"
                    data-category="todos" aria-pressed="true">Todos</button></li>
            <li><button type="button" class="filter-btn px-3 py-1 rounded-md border shadow-sm text-sm"
                    data-category="modernos">Modernos</button></li>
            <li><button type="button" class="filter-btn px-3 py-1 rounded-md border shadow-sm text-sm"
                    data-category="clasicos">Clásicos</button></li>
            <li><button type="button" class="filter-btn px-3 py-1 rounded-md border shadow-sm text-sm"
                    data-category="abstractos">Abstractos</button></li>
        </ul>
    </nav>

    <!-- ! grid responsive de productos -->
    <div id="catalogo-grid" class="grid gap-6 grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

        <% if(cuadros.length === 0){ %>
            <p class="text-gray-300">No se encontraron cuadros.</p>
            <% }else {cuadros.forEach(p=> { %> <!-- Cambiado cuadros.array a cuadros -->
                <!-- tarjeta 1 -->
                <article class="bg-zinc-900 rounded-lg overflow-hidden shadow hover:shadow-lg transition">
                    <figure class="relative w-full h-56">
                        <img src="/uploads/<%= p.imagen %>" alt="<%= p.titulo %>"
                            class="w-full h-full object-cover" />
                    </figure>
                    <div class="p-4">
                        <h3 class="text-lg font-medium text-gray-100">
                            <%= p.titulo %>
                        </h3>
                        <p class="text-sm text-gray-400 mt-1">
                            <%= p.descripcion %>
                        </p>
                        <div class="mt-3 flex items-center justify-between">
                            <div class="flex gap-2">
                                <button class="px-3 py-1 bg-blue-600 text-white rounded-md text-sm">Ver</button>
                                <button
                                    class="px-3 py-1 border border-gray-700 text-gray-100 rounded-md text-sm">Solicitar</button>
                            </div>
                        </div>
                    </div>
                </article>
                <% })} %> <!-- Cierre del forEach y del if -->

    </div>
</section>

