<section aria-labelledby="catalogo-heading" id="catalogo" class="scroll-mt-20 mb-12 pb-5">
    <div class="mb-5">
        <h2 id="catalogo-heading" class="text-2xl font-semibold mb-4 text-center text-gray-100">Categorias</h2>
        <p class="text-gray-200 text-center">Explora nuestras diferentes categorías de cuadros</p>
    </div>

    <!-- grid -->
    <div id="categorias-destacadas-grid" class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% if (locals.categoriasDestacadas && categoriasDestacadas.length > 0) { %>
            <% categoriasDestacadas.forEach(categoria => { %>
                <a href="/catalogo?categoria=<%= encodeURIComponent(categoria.nombre) %>"
                   class="group relative min-h-[30vh] rounded-lg overflow-hidden shadow hover:shadow-lg transition">
                    <!-- Imagen -->
                    <img src="<%= categoria.imagen_url || '/assets/img/default-category.jpg' %>" alt="Categoría <%= categoria.nombre %>"
                         class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-out transform group-hover:scale-105 group-hover:blur-sm group-hover:brightness-75"
                         loading="lazy" />
                    <!-- Capa oscura -->
                    <div class="absolute inset-0 bg-black/30 group-hover:bg-black/50 transition-colors duration-300 pointer-events-none"></div>
                    <!-- Texto inferior (oculto en hover) -->
                    <div class="absolute bottom-0 left-0 p-4 z-10 transition-opacity duration-300 group-hover:opacity-0">
                        <h3 class="text-lg font-medium text-gray-100"><%= categoria.nombre %></h3>
                    </div>
                    <!-- Texto centrado (aparece en hover) -->
                    <div class="absolute inset-0 z-20 flex items-center justify-center p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="text-center text-gray-100">
                            <h3 class="text-3xl font-semibold"><%= categoria.nombre %></h3>
                        </div>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p class="col-span-full text-center text-zinc-400">No hay categorías destacadas para mostrar.</p>
        <% } %>
    </div>
</section>

