    <!-- ! grid responsive de productos -->
    <div id="catalogo-grid" class="grid gap-6 grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

        <% if(cuadros.length === 0){ %>
            <p class="text-gray-300">No se encontraron cuadros.</p>
            <% }else {cuadros.forEach(p=> { %>
            <!-- Cambiado cuadros.array a cuadros -->
            <!-- tarjeta 1 -->
            <a href="/catalogo/<%= p.id %>">
                <!-- Tarjeta clickeable -->
                <article
                  class="bg-zinc-900 rounded-lg overflow-hidden shadow 
                         hover:shadow-2xl hover:scale-105 hover:ring-2 hover:ring-zinc-500
                         transition-transform duration-300 cursor-pointer"
                >
                  <figure class="relative w-full h-56">
                    <img
                      src="<%= p.imagen %>"
                      alt="<%= p.titulo %>"
                      class="w-full h-full object-cover group-hover:opacity-90 transition"
                    />
                  </figure>
                  <div class="p-4">
                    <h3 class="md:text-lg text-base font-medium text-gray-100">
                      <%= p.titulo %>
                    </h3>
                    <p
              class="md:text-sm text-xs max-w-fit mt-2 rounded-lg px-2 py-1 font-medium"
              style="
                background-color: <%= p.categoria_color || '#3f3f46' %>;
                color: #ffffff;
              "
            >
              <%= p.categoria %>
            </p>
                  </div>
                </article>
              </a>
            <% })} %> <!-- Cierre del forEach y del if -->

    </div>
</section>

