<a href="/catalogo/<%= cuadro.id %>">
  <!-- Tarjeta clickeable -->
  <article
    class="bg-zinc-900 rounded-lg overflow-hidden shadow hover:shadow-2xl hover:scale-105 hover:ring-2 hover:ring-zinc-500 transition-transform duration-300 cursor-pointer group"
  >
    <figure class="relative w-full aspect-square">
      <img
        src="<%= cuadro.imagen || '/assets/img/placeholder.png' %>"
        alt="<%= cuadro.titulo %>"
        class="w-full h-full object-cover group-hover:opacity-90 transition"
        loading="lazy"
      />
    </figure>
    <div class="p-4">
      <h3 class="md:text-lg text-base font-medium text-gray-100 truncate">
        <%= cuadro.titulo %>
      </h3>
      <p class="text-xs text-zinc-400 mt-1"><%= cuadro.categoria %></p>
    </div>
  </article>
</a>